{
  "name": "wnfs-blobs",
  "type": "module",
  "version": "0.0.0",
  "description": "Fission storage for hermes",
  "main": "index.js",
  "scripts": {
    "build-tests": "tsc --target es2020 --module es2020 --moduleResolution nodenext --skipLibCheck test/index.ts",
    "test": "npm run build-tests && node ./test/index.js | tap-arc",
    "build-mjs": "esbuild src/index.ts --bundle --format=esm --keep-names --outfile=./dist/index.mjs",
    "build-js": "esbuild src/index.ts --bundle --format=cjs --keep-names --outfile=./dist/index.cjs",
    "build": "mkdir -p ./dist && rm -rf ./dist/* && npm run build-js && npm run build-mjs",
    "postversion": "git push && git push --tags && npm publish",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/hermes-fission.git"
  },
  "author": "nichoth",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/nichoth/hermes-fission/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "devDependencies": {
    "esbuild": "^0.15.11",
    "git-hooks-plus": "^1.0.1",
    "standardx": "^7.0.0",
    "tap-arc": "^0.3.5",
    "tapzero": "^0.6.1",
    "typescript": "^4.9.5",
    "webnative": "^0.36.3"
  },
  "homepage": "https://github.com/nichoth/hermes-fission#readme",
  "dependencies": {
    "json-stable-stringify": "^1.0.2",
    "libp2p": "^0.42.2",
    "monotonic-timestamp": "^0.0.9"
  }
}
